<%= form_with model: person, local: true, class: "row g-3" do |f| %>
<% if person.errors.any? %>
<div class="col-12">
  <div class="alert alert-danger">
    <h6>Please fix the following errors:</h6>
    <ul class="mb-0">
      <% person.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="col-md-6">
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="col-md-6">
  <%= f.label :phone, class: "form-label" %>
  <%= f.text_field :phone, class: "form-control" %>
</div>

<div class="col-md-6">
  <%= f.label :village, class: "form-label" %>
  <%= f.text_field :village, class: "form-control" %>
</div>

<div class="col-md-6">
  <%= f.label :district, class: "form-label" %>
  <%= f.text_field :district, class: "form-control" %>
</div>

<div class="col-12">
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", people_path, class: "btn btn-secondary" %>
</div>
<% end %>