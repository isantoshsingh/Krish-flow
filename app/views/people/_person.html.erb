<tr id="<%= dom_id person %>">
  <td>
    <strong><%= person.name %></strong>
  </td>
  <td><%= person.phone %></td>
  <td><%= person.full_address %></td>
  <td>
    <% if person.is_landowner? && person.is_farmer? %>
    <span class="badge bg-info">Landowner & Farmer</span>
    <% elsif person.is_landowner? %>
    <span class="badge bg-primary">Landowner</span>
    <% elsif person.is_farmer? %>
    <span class="badge bg-success">Farmer</span>
    <% else %>
    <span class="badge bg-secondary">No Role</span>
    <% end %>
  </td>
  <td>
    <%= link_to "View", person, class: "btn btn-sm btn-outline-primary" %>
    <%= link_to "Edit", edit_person_path(person), class: "btn btn-sm btn-outline-secondary" %>
    <%= link_to "Delete", person, method: :delete, 
                             confirm: "Are you sure?", 
                             class: "btn btn-sm btn-outline-danger" %>
  </td>
</tr>